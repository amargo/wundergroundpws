# WundergroundPWS Multi-Station Configuration
# Copy this file to .env and fill in your values

# Weather Underground API Key (required)
# Get it from: https://www.wunderground.com/member/api-keys
WU_API_KEY=your_api_key_here

# Multi-station group configuration
GROUP_NAME=velence
LATITUDE=47.2513
LONGITUDE=18.6094

# Station configurations (JSON format)
# Each station should have: pws_id, name, priority (1=highest)
STATIONS=[
  {
    "pws_id": "IKPOLN1",
    "name": "Velence Station 1",
    "priority": 1
  },
  {
    "pws_id": "IKPOLN2", 
    "name": "Velence Station 2",
    "priority": 2
  },
  {
    "pws_id": "IVELEN69",
    "name": "Velence Station 3", 
    "priority": 3
  }
]

# Optional settings
LANGUAGE=en-US
UNIT_SYSTEM=metric
NUMERIC_PRECISION=decimal
CALENDAR_DAY_TEMP=false
