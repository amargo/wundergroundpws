{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test API Standalone",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_api_standalone.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Test Multi-Station (HA Required)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_multi_station.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Test Multi-Station (Debug Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_multi_station.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "justMyCode": false,
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/custom_components/wundergroundpws",
                "DEBUG": "true"
            }
        },
        {
            "name": "Setup Multi-Station",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/setup_multi_station.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Multi-Station Coordinator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_multi_station.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/custom_components/wundergroundpws",
                "PYTHONUNBUFFERED": "1"
            },
            "preLaunchTask": "install-test-requirements"
        }
    ]
}
